{% extends 'base.html.twig' %}

{% block title %}Note index{% endblock %}

{% block body %}

    <div class="nav">
        <a class="add-button" href="{{ path('note_new') }}">Ajouter une note</a>
    </div>

    <div class="grid">
        {% for note in notes %}
        <div class="item">
            <a href="{{ path('note_show', {'id': note.id}) }}">
                <div class="item-content">
                    {{ note.note }}
                    <input class="duedate" type="hidden" value="{{ note.dueDate ? note.dueDate|date('Y-m-d H:i:s') : '' }}" />
                </div>
            </a>
        </div>
        {% else %}
            <p>Aucune note enregistr√©e !</p>
        {% endfor %}
    </div>
{% endblock %}
