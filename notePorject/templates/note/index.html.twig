{% extends 'base.html.twig' %}

{% block title %}Note index{% endblock %}

{% block body %}

    <div class="nav">
        <a class="add-button" href="{{ path('note_new') }}">Ajouter une note</a>
    </div>

    <div class="grid">
        {% for note in notes %}
        <div class="item">
            <div class="item-content">
                {{ note.note }}
                <input type="hidden" value="{{ note.dueDate ? note.dueDate|date('Y-m-d H:i:s') : '' }}" />
            </div>
        </div>
        {% else %}
            <p>Aucune note enregistr√©e !</p>
        {% endfor %}
    </div>
{% endblock %}
