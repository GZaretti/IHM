{% extends 'base.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
    <style>
        .grid {
            display: flex;
            flex-direction: row;
            justify-items: center;
            align-items: center;
        }
        .content-show {
            background: #59687d;
            color: #fff;
            width: 400px;
            height: 400px;
            margin: 0 auto;
        }
        .content-show p {
            font-size: 42px;
            text-align: center;
        }
    </style>
    <div class="grid">
        <div class="content-show">
            <p>{{ note.note }}</p>
            <p>{{ note.dueDate ? note.dueDate|date('d.m.Y H:i:s') : ''}}</p>
        </div>
    </div>

    <div class="nav">
        <a class="add-button" href="{{ path('note_index') }}">back to list</a>

        <a class="add-button" href="{{ path('note_edit', {'id': note.id}) }}">edit</a>
        {{ include('note/_delete_form.html.twig') }}
    </div>

{% endblock %}
